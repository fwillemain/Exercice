<UserControl x:Class="Trombinoscope.UCEmployés"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:Trombinoscope"
             mc:Ignorable="d" 
             d:DesignHeight="300" d:DesignWidth="300">
    <StackPanel Orientation="Horizontal">
        <StackPanel>
            <Image Source="pack://application:,,,/Images/images.jpg"/>
            <ListBox Name="lbEmployés">
            </ListBox>
        </StackPanel>
        <StackPanel Name="spEmployés" Orientation="Vertical" Margin="5, 5">
            <TextBlock Name="tbId"></TextBlock>
            <TextBlock Name="tbNom"></TextBlock>
            <TextBlock Name="tbPrénom"></TextBlock>
        </StackPanel>
    </StackPanel>
</UserControl>
