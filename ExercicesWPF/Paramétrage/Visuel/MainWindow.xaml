<Window x:Class="Paramétrage.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:Paramétrage"
        mc:Ignorable="d"
        Title="Options Word" Height="580" Width="800">
    <DockPanel Margin="5">
        <StackPanel DockPanel.Dock="Bottom" Orientation="Horizontal" HorizontalAlignment="Right">
            <Button Content="OK"></Button>
            <Button Content="Annuler"></Button>
        </StackPanel>
        <TabControl Name="tcMenu" TabStripPlacement="Left">
            <TabItem Name="tiGénéral" Header="Général" Padding="35,2"/>
            <TabItem Name="tiAffichage" Header="Affichage"/>
            <TabItem Header="Vérification">
                <StaticResource ResourceKey="ImageJacky"/>
            </TabItem> 
        </TabControl>
    </DockPanel>
</Window>
