<ResourceDictionary xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
                    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
                    xmlns:local="clr-namespace:Paramétrage">

    <Style TargetType="Button">
        <Setter Property="Height" Value="30"/>
        <Setter Property="Width" Value="100"/>
        <Setter Property="Margin" Value="5,5,0,0"/>
    </Style>

    <Style x:Key="StyleSousTitre">
        <Setter Property="Label.Height" Value="25"/>
        <Setter Property="Label.Padding" Value="10,0,0,0"/>
        <Setter Property="Label.Margin" Value="-10,10,0,0"/>
        <Setter Property="Label.VerticalContentAlignment" Value="Center"/>
        <Setter Property="Label.Background" Value="LightGray"/>
        <Setter Property="Label.FontWeight" Value="Bold"/>
    </Style>

</ResourceDictionary>